name: training
version: 1.0
description: "Training of the model"
conda_env: conda.yml

entry_points:
  main:
    parameters:

      config_file:
        description: "Name of the json configuration file containing file settings."
        type: string      

      output_modelname:
        description: "Name of the file under which the model will be saved."
        type: string

    command: >-
        python training.py  --config_file {config_file} \
                             --output_modelname {output_modelname} 
                       
